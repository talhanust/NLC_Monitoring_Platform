{
"name": "nlc-monitoring-platform",
"version": "1.0.0",
"description": "Desktop-first, offline-capable project monitoring application for NLC",
"main": "packages/desktop/src/main.js",
"scripts": {
"dev": "concurrently "npm run dev:backend" "npm run dev:frontend" "wait-on http://localhost:3000 && electron ."",
"dev:frontend": "cd packages/frontend && npm run dev",
"dev:backend": "cd packages/backend && python -m uvicorn main:app --reload --port 8000",
"build": "npm run build:frontend && npm run build:backend",
"build:frontend": "cd packages/frontend && npm run build",
"build:backend": "cd packages/backend && pyinstaller --onefile main.py",
"package": "electron-builder",
"lint": "eslint packages/frontend/src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
"type-check": "tsc --noEmit",
"test": "npm run test:frontend && npm run test:backend",
"test:frontend": "cd packages/frontend && npm test",
"test:backend": "cd packages/backend && python -m pytest",
"docs:build": "cd docs && npm run build"
},
"keywords": ["electron", "react", "fastapi", "monitoring", "offline"],
"author": "NLC Team",
"license": "Proprietary",
"devDependencies": {
"concurrently": "^8.2.0",
"electron": "^28.0.0",
"electron-builder": "^24.6.4",
"eslint": "^8.52.0",
"typescript": "^5.3.0",
"wait-on": "^7.0.1"
},
"workspaces": [
"packages/frontend",
"packages/desktop",
"packages/shared"
]
}
