{
  "name": "@engineering-app/monorepo",
  "version": "1.0.0",
  "description": "Engineering application monorepo with Electron desktop, React frontend, FastAPI backend, and shared utilities",
  "private": true,
  "workspaces": [
    "packages/desktop",
    "packages/frontend", 
    "packages/backend",
    "packages/shared"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:desktop\"",
    "dev:frontend": "npm run dev --workspace=@engineering-app/frontend",
    "dev:backend": "npm run dev --workspace=@engineering-app/backend",
    "dev:desktop": "npm run dev --workspace=@engineering-app/desktop",
    "test": "npm run test --workspaces",
    "lint": "eslint packages/*/src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint packages/*/src --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "npm run clean --workspaces && rimraf node_modules",
    "postinstall": "npm run build:shared",
    "build:shared": "npm run build --workspace=@engineering-app/shared"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "concurrently": "^8.2.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/engineering-app.git"
  },
  "keywords": [
    "engineering",
    "electron",
    "react",
    "fastapi",
    "monorepo",
    "typescript"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT"
}
