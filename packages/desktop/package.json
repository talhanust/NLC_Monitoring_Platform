{
  "name": "@engineering-app/desktop",
  "version": "1.0.0",
  "description": "Electron desktop application for engineering app",
  "main": "dist/main/index.js",
  "private": true,
  "scripts": {
    "build": "tsc && npm run build:renderer",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"npm run start:electron\"",
    "dev:main": "tsc --project tsconfig.main.json --watch",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "start": "electron .",
    "start:electron": "wait-on dist/main/index.js && electron .",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@engineering-app/shared": "workspace:*",
    "electron-updater": "^6.1.4",
    "electron-log": "^5.0.0",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@vitejs/plugin-react": "^4.1.0",
    "electron": "^26.2.4",
    "electron-builder": "^24.6.4",
    "electron-devtools-installer": "^3.2.0",
    "vite": "^4.4.9",
    "wait-on": "^7.0.1",
    "concurrently": "^8.2.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "build": {
    "appId": "com.engineering-app.desktop",
    "productName": "Engineering App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "engineering-app"
    }
  },
  "author": "Your Name <your.email@example.com>",
  "license": "MIT"
}
