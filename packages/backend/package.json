{
  "name": "@engineering-app/backend",
  "version": "1.0.0",
  "description": "FastAPI backend for engineering app",
  "private": true,
  "scripts": {
    "dev": "uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
    "start": "uvicorn src.main:app --host 0.0.0.0 --port 8000",
    "test": "python -m pytest tests/ -v",
    "test:coverage": "python -m pytest tests/ --cov=src --cov-report=html",
    "lint": "python -m black src tests && python -m isort src tests && python -m flake8 src tests",
    "lint:check": "python -m black --check src tests && python -m isort --check-only src tests && python -m flake8 src tests",
    "type-check": "python -m mypy src",
    "clean": "find . -type d -name __pycache__ -delete && find . -name '*.pyc' -delete",
    "install": "pip install -r requirements.txt",
    "install:dev": "pip install -r requirements-dev.txt",
    "migrate": "alembic upgrade head",
    "migrate:create": "alembic revision --autogenerate -m",
    "seed": "python scripts/seed_data.py"
  },
  "dependencies": {
    "note": "This package.json is for documentation. Python dependencies are managed via requirements.txt files."
  },
  "devDependencies": {},
  "engines": {
    "python": ">=3.11"
  },
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "python_requirements": {
    "production": [
      "fastapi>=0.104.0",
      "uvicorn[standard]>=0.23.0",
      "pydantic>=2.4.0",
      "sqlalchemy>=2.0.0",
      "alembic>=1.12.0",
      "python-multipart>=0.0.6",
      "python-jose[cryptography]>=3.3.0",
      "passlib[bcrypt]>=1.7.4",
      "python-dotenv>=1.0.0",
      "redis>=4.6.0",
      "celery>=5.3.0",
      "psycopg2-binary>=2.9.7",
      "httpx>=0.25.0",
      "structlog>=23.1.0"
    ],
    "development": [
      "pytest>=7.4.0",
      "pytest-asyncio>=0.21.1",
      "pytest-cov>=4.1.0",
      "httpx>=0.25.0",
      "black>=23.7.0",
      "isort>=5.12.0",
      "flake8>=6.0.0",
      "mypy>=1.5.0",
      "pre-commit>=3.4.0"
    ]
  }
}
